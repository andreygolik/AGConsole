{
    "env": {
        "es6": true,
        "node": true
    },
    "plugins": [
        "security"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:security/recommended"
    ],
    "rules": {
        "indent": [
            "warn",
            2
        ],
        "linebreak-style": [
            "off",
            "unix"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "no-console": [
            "warn"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "warn"
        ],
        "no-invalid-this": [
            "error"
        ],
        "new-cap": [
            "error"
        ],
        "arrow-parens": [
            "error"
        ],
        "curly": [
            "error"
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "brace-style": [
            "warn"
        ],
        "semi-spacing": [
            "warn"
        ],
        "keyword-spacing": [
            "warn"
        ],
        "block-spacing": [
            "warn"
        ],
        "no-multi-spaces": [
            "warn"
        ],
        "space-before-function-paren": [
            "warn"
        ],
        "array-bracket-spacing": [
            "warn"
        ],
        "object-curly-spacing": [
            "warn"
        ],
        "spaced-comment": [
            "warn"
        ],
        "no-trailing-spaces": [
            "warn"
        ]
    },
    "overrides": [
        {
            "files": [ "routes/index.js" ],
            "rules": {
                "new-cap": [
                    "off"
                ]
            }
        },
        {
            "files": [ "test/*.test.js" ],
            "rules": {
                "no-undef": [
                    "off"
                ]
            }
        },
        {
            "files": [ "utils/**" ],
            "rules": {
                "no-console": [
                    "off"
                ]
            }
        }
    ]
}
